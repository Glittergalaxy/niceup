{
  "envId": "{{env.ENV_ID}}",
  "version": "2.0",
  "$schema": "https://framework-1258016615.tcloudbaseapp.com/schema/latest.json",
  "framework": {
    "name": "niceup-mini",
    "plugins": {
      "mini": {
        "use": "@cloudbase/framework-plugin-mp",
        "inputs": {
          "appid": "{{env.mini_appid}}",
          "privateKey": "{{env.mini_pub_privateKey}}",
          "localPath": "./",
          "ignores": [
            "node_modules/**/*"
          ],
          "deployMode": "preview",
          "previewOptions": {
            "desc": "CloudBase Framework 一键预览",
            "setting": {
              "es6": false
            },
            "qrcodeOutputPath": "./qrcode.jpg",
            "pagePath": "pages/index/index"
          }
        }
      },
      "docs": {
        "use": "@cloudbase/framework-plugin-website@1.6.0-alpha.0",
        "inputs": {
          "installCommand": "echo 'Skip Install'",
          "buildCommand": "echo 'npm run build'",
          "outputPath": "site/dist",
          "cloudPath": "/docs/",
          "ignore": [
            ".git",
            ".github",
            "node_modules",
            "cloudbaserc.js"
          ]
        }
      }
    },
    "requirement": {
      "environment": {
        "mini_appid": {
          "description": "小程序ID",
          "required": true
        },
        "mini_pub_privateKey": {
          "description": "小程序发布密钥(Base64后)",
          "required": true
        }
      }
    }
  },
  "functionRoot": "./functions",
  "functions": [],
  "region": "ap-shanghai"
}
